{
	"name": "vscode-language-applesoft",
	"displayName": "Applesoft BASIC",
	"description": "Language support for Applesoft BASIC",
	"icon": "language-applesoft-icon.png",
	"version": "0.4.0",
	"license": "GPL-3.0-only",
	"publisher": "dfgordon",
	"repository": {
		"type": "git",
		"url": "https://github.com/dfgordon/vscode-language-applesoft"
	},
	"engines": {
		"vscode": "^1.56.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:applesoft"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Applesoft BASIC",
			"properties": {
				"applesoft.caseSensitive": {
					"type": "boolean",
					"default": false,
					"description": "Lower case in reserved words or variables is considered an error (requires reload)."
				},
				"applesoft.terminalString": {
					"type": "boolean",
					"default": true,
					"description": "Warn against missing unquotes. In Applesoft, strings without an unquote run to end-of-line."
				},
				"applesoft.collisions": {
					"type": "boolean",
					"default": true,
					"description": "Warn against long variable name collisions. In Applesoft, variables of the same type with the same first two characters share the same storage, i.e., are the same."
				},
				"applesoft.lowerCaseCompletions": {
					"type": "boolean",
					"default": false,
					"markdownDescription": "Use lower case in completions and snippets (ingored if `#applesoft.caseSensitive#`)."
				}
			}
		},
		"languages": [
			{
				"id": "applesoft",
				"extensions": [
					".bas"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "applesoft",
				"scopeName": "source.bas",
				"path": "./syntaxes/applesoft.tmGrammar.json"
			}
		]
	},
	"dependencies": {
		"web-tree-sitter": "^0.19.4"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^14.16.0",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^4.16.0",
		"@typescript-eslint/parser": "^4.16.0",
		"eslint": "^7.21.0",
		"typescript": "^4.4.3"
	}
}
